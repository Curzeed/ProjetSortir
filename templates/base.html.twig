<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% block stylesheets %}
            <link rel="icon" href="{{ asset('img/icons8-globe-terrestre-30.png') }}" type="image/x-icon/png">

        {% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
    {% block header %}

    <div class="nav">
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="{{ path('liste_sorties') }}" class="navabar-brand">
                            <img src="{{ asset('img/globe-44.gif') }}" alt="logo" style="width: 40px;">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Villes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Campus</a>
                    </li>
                    <li class="nav-item">
                        {% if app.user %}
                        <a class="nav-link" href="{{ path('profil_participant' ,{'id' : app.user.id}) }}">Mon Profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_logout') }}">Se d√©connecter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('sortie_nouvelle',{'pseudo' : app.user.userIdentifier}) }}">Nouvelle sortie</a>
                    </li>
                        {% endif %}
                    {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_login') }}">Login</a>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('app_register') }}">S'inscrire</a>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </div>
    {% endblock %}
        {% block contenu %}{% endblock %}
    </body>
</html>
