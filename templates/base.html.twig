<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="icon" href="{{ asset('img/icons8-globe-terrestre-30.png') }}" type="image/x-icon/png">

        {% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
    {% block header %}
        <div class="logo">
            <a href="{{ path('liste_sorties') }}" class="logo"><img src="{{ asset('img/logo.png') }}" alt="logo du site">Sortir.com</a>
        </div>
    <div class="nav">
        <a href="#">Villes</a>&nbsp &nbsp
        <a href="#">Campus</a>&nbsp &nbsp
        {% if app.user %}
        <a href={{ path('profil_participant' ,{'id' : app.user.id}) }}>Mon profil</a>&nbsp &nbsp
            <a href="{{path('app_logout') }}">Se déconnecter</a>
            <a href="{{ path('sortie_nouvelle') }}">Créer une sortie</a>
        {% endif %}
        <a href="{{ path('app_login') }}">Login</a>&nbsp &nbsp
        <a href="{{path('app_register') }}">S'inscrire </a>&nbsp &nbsp
    </div>
    {% endblock %}
        {% block contenu %}{% endblock %}
    </body>
</html>
